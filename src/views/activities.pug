extends layout

block content

  -
    var dates = [
      '28.08.2017',
      '27.08.2017',
      '26.08.2017',
      '24.08.2017',
      '22.08.2017',
      '18.08.2017'
    ]

  .page
    header.header
      .header-top.wrapper
        .header-logo Югорский<br>лесопромышленный холдинг
        .header-contacts
          .header-contacts__item E-mail:&nbsp;
            a(href="#") office@ugratimber.ru
          .header-contacts__item Телефон:
            span  +7 3467
              b  35-62-73
          .header-contacts__item Факс:
            span  +7 3467
              b  36-30-33
        select#lang
          option(value="ru", selected) RU
          option(value="en") EN
      .menu
        .wrapper
          a(href="#").menu__item О компании
          a(href="#").menu__item Продукция
          a(href="#").menu__item Раскрытие информации
          a(href="#").menu__item Закупки
          a(href="#").menu__item Реализация активов
          a(href="#").menu__item Пресс центр
          a(href="#").menu__item Вакансии
          a(href="#").menu__item Контакты
          button(type="button", data-target="#search").menu__item.search.js-search
          form(action="#")#search.search-form
            input(type="text").search-form__input
            button.search-form__button Найти

    main.main
      .wrapper
        .breadcrumbs
          a(href="#").breadcrumbs__item Главная
          span.breadcrumbs__item Реализация активов

        h1.h1 Реализация активов
        .detail
          .detail-block
            .tabs
              input(type="radio", id="tab-1", name="tab", data-one).tabs__input
              label(for="tab-1").tabs__label Реализация недвижимого имущества
              input(type="radio", id="tab-2", name="tab", data-two, checked).tabs__input
              label(for="tab-2").tabs__label Реализация движимого имущества и материалов
              section(data-one).tabs__section
                table.table.col-3
                  tbody
                    tr
                      th Дата торгов
                      th Информационное извещение
                      th Документ для скачивания
                    each date in dates
                      tr
                        td= date
                        td.
                          АО «Югорски Лесопромышленный Холдинг» сообщает о намерении реализовать принадлежащий
                          ему объект недвижимого имущества «Здание аптеки» в п. Приозерный
                        td
                          a(href="file.pdf").file Описание извещения
              section(data-two).tabs__section
                .activities
                  .activities-left
                    table.table.col-2
                      tbody
                        tr
                          th Дата размещения
                          th Детальная информация
                        each date in dates
                          tr
                            td= date
                            td
                              a(href="file.pdf").file Описание Реализация движимого имущества и материалов
                  .activities-right.contacts
                    h4.h4 По вопросам обращаться:
                    .desc Отдел собственности
                    h4.h4 Самочерных Алексей Сергеевич
                    .contacts-block.flex
                      .contacts-left Телефон:
                      .contacts-right 8 (34675) 380-67
                    .contacts-block.flex
                      .contacts-left E-mail:
                      .contacts-right
                        a(href="#") yrist.lzu@ugratimber.ru

          .pag
            a(href="#").pag__item.left
            a(href="#").pag__item.active 1
            a(href="#").pag__item 2
            a(href="#").pag__item 3
            a(href="#").pag__item ...
            a(href="#").pag__item 11
            a(href="#").pag__item.right

    footer.footer
      .wrapper
        .footer-block
          .footer-left
            p.
              628011, Россия, Тюменская область, Ханты-Мансийский автономный округ — Югра,
              г. Ханты-Мансийск, ул. Рознина, д. 71
            p Телефон: +7 (3467) <b>35-62-73</b>, Факс: + 7 (3467) <b>36-30-33</b>
          .footer-right
            a(href="#").uw
