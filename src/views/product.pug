                a(href="images/product-2.png", data-fancybox="detail-gallery").swiper-slide.detail-gal__item
                  .detail-gal__item-img(style="background-image: url('images/product-2.png')")
                a(href="images/product-3.png", data-fancybox="detail-gallery").swiper-slide.detail-gal__item
                  .detail-gal__item-img(style="background-image: url('images/product-3.png')")
                a(href="images/product-4.png", data-fancybox="detail-gallery").swiper-slide.detail-gal__item
                  .detail-gal__item-img(style="background-image: url('images/product-4.png')")
            .swiper-container.detail-gal-thumbs
              .swiper-wrapper
                .swiper-slide.detail-gal-thumbs__item
                  .detail-gal__item-img(style="background-image: url('images/product-1.png')")
                .swiper-slide.detail-gal-thumbs__item
                  .detail-gal__item-img(style="background-image: url('images/product-2.png')")
                .swiper-slide.detail-gal-thumbs__item
