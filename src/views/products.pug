extends layout

block content

  .page
    header.header
      .header-top.wrapper
        .header-logo Югорский<br>лесопромышленный холдинг
        .header-contacts
          .header-contacts__item E-mail:&nbsp;
            a(href="#") office@ugratimber.ru
          .header-contacts__item Телефон:
            span  +7 3467
              b  35-62-73
          .header-contacts__item Факс:
            span  +7 3467
              b  36-30-33
        select#lang
          option(value="ru", selected) RU
          option(value="en") EN
      .menu
        .wrapper
          a(href="#").menu__item.active О компании
          a(href="#").menu__item Продукция
          a(href="#").menu__item Раскрытие информации
          a(href="#").menu__item Закупки
          a(href="#").menu__item Реализация активов
          a(href="#").menu__item Пресс центр
          a(href="#").menu__item Вакансии
          a(href="#").menu__item Контакты
          button(type="button").menu__item.search

    main.main
      .wrapper
        .breadcrumbs
          a(href="#").breadcrumbs__item Главная
          span.breadcrumbs__item Продукция

        h1.h1 Продукция
        .detail
          .units.products
            a(href="#").units__item
              .units__item-block
                .units__item-wrap(style="background-image: url('images/product-1.png')")
                .units__item-name Брус клееный из шпона ЛВЛ
            a(href="#").units__item
              .units__item-block
                .units__item-wrap(style="background-image: url('images/product-2.png')")
                .units__item-name Древесно-стружечные плиты (ДСП, ЛДСП)
            a(href="#").units__item
              .units__item-block
                .units__item-wrap(style="background-image: url('images/product-3.png')")
                .units__item-name Хвойный пиломатериал
            a(href="#").units__item
              .units__item-block
                .units__item-wrap(style="background-image: url('images/product-4.png')")
                .units__item-name Фанера хвойная

    footer.footer
      .wrapper
        .footer-block
          .footer-left
            p.
              628011, Россия, Тюменская область, Ханты-Мансийский автономный округ — Югра,
              г. Ханты-Мансийск, ул. Рознина, д. 71
            p Телефон: +7 (3467) <b>35-62-73</b>, Факс: + 7 (3467) <b>36-30-33</b>
          .footer-right
            a(href="#").uw
